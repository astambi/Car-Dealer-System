@model SuppliersByTypeModel

@{
    ViewData["Title"] = "Suppliers";
    const string create = nameof(SuppliersController.Create);
    const string delete = nameof(SuppliersController.Delete);
    const string edit = nameof(SuppliersController.Edit);
}


<header class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Suppliers @Model.Type </h1>

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action=@create class="btn btn-@CssHelpers.GetColor(create)">Add supplier</a>
    }
</header>

@if (!Model.Suppliers.Any())
{
    <h3>No suppliers</h3>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Total parts</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model.Suppliers)
            {
                <tr>
                    <td>#@supplier.Id</td>
                    <td>@supplier.Name</td>
                    <td>@supplier.TotalParts</td>
                    <td>
                        <a asp-action="@edit" asp-route-id="@supplier.Id" class="btn btn-@CssHelpers.GetColor(edit)">@edit</a>
                        <a asp-action="@delete" asp-route-id="@supplier.Id" class="btn btn-@CssHelpers.GetColor(delete)">@delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}