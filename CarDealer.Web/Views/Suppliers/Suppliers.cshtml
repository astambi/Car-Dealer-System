@model SuppliersByTypeModel

@{
    ViewData["Title"] = "Suppliers";
}

<h1>Suppliers @Model.Type </h1>

@if (!Model.Suppliers.Any())
{
    <h3>No suppliers</h3>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Total parts</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model.Suppliers)
            {
                <tr>
                    <td># @supplier.Id</td>
                    <td>@supplier.Name</td>
                    <td>@supplier.TotalParts</td>
                </tr>
            }
        </tbody>
    </table>
}