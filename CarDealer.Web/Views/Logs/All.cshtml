@model LogPageListingModel

@{
    ViewData["Title"] = "Logs";
    const string all = nameof(LogsController.All);
    const string clear = nameof(LogsController.Clear);
}

<header class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Logs</h1>

    <form asp-action="@all" method="post" class="form-inline">
        <div class="form-group">
            <input type="search" name="search" placeholder="Search by username" value="@Model.Pagination.SearchTerm" class="form-control mr-sm-2" />
            <input type="submit" value="Search" class="btn btn-outline-primary my-2 my-sm-0" />
        </div>
    </form>

    <a asp-action="@clear" class="btn btn-outline-warning">@clear all logs</a>
</header>

<table class="table table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Operation</th>
            <th>Modified table</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.User</td>
                <td>@log.Operation</td>
                <td>@log.ModifiedTable</td>
                <td>@log.Time.ToLocalTime()</td>
            </tr>
        }
    </tbody>
</table>

<partial name="../Shared/_PaginationPartial" model="Model.Pagination" />