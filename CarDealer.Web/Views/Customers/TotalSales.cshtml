@model CustomerTotalSalesModel

@{
    ViewData["Title"] = "Total sales";
}

<h1>Total sales for customer</h1>

@if (Model == null)
{
    <h3>Customer not found</h3>
}
else
{   
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <h3>Name: @Model.Name</h3>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <h3>Total cars bought: @Model.CarsBought</h3>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <h3>Total money spent: @Model.TotalMoneySpent.ToCurrency()</h3>
        </li>
    </ul>
}
